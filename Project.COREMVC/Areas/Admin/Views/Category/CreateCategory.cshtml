@model CategoryPageVM

@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";


}



<form asp-action="CreateCategory" asp-controller="Category" method="post" class="p-3 w-75 m-auto">
    <div class="mb-3">
        <label>Kategori ismini giriniz</label>
        <input asp-for="model.CategoryName" class="form-control" />
